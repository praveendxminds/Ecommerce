<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cart_shadow"
    android:id="@+id/notyfi_lt"
    android:layout_marginBottom="10dp"
    android:padding="0dp">

    <LinearLayout android:orientation="horizontal"
        android:layout_height="fill_parent"
        android:padding="15dp"
        android:layout_width="fill_parent">




        <LinearLayout
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_width="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content">

                <TextView
                    android:id="@+id/prd_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/intercom_black"
                    android:text="GF IDLY RICE"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_medium"/>

                </LinearLayout>


            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blackshadow"
                    android:text="Order Ref No :"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blackshadow"
                    android:text="01 Jan 2019"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"/>


            </LinearLayout>




        </LinearLayout>



    </LinearLayout>





</LinearLayout>
