<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/white"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolbarColoredBackArrow"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <RelativeLayout android:background="#e1e1e1"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:id="@+id/layout_total"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="5dp"
            android:weightSum="2">
            <TextView android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="Total : "
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium">
            </TextView>

            <TextView
                android:id="@+id/tv_total"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="0 Rs"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium">
            </TextView>
        </LinearLayout>


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_placeorder"
            android:layout_below="@+id/layout_total">


            <LinearLayout
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/bill_add_layout"
                    android:orientation="vertical"
                    android:layout_above="@+id/ship_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="0dp">


                    <LinearLayout
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent">


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/intercom_black"
                            android:text="Billing Address"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="10dp"
                            android:textSize="17sp"
                            android:fontFamily="@font/roboto_bold"/>


                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cart_shadow"
                        android:layout_marginBottom="10dp"
                        android:padding="0dp">

                        <LinearLayout android:orientation="horizontal"
                            android:layout_height="fill_parent"
                            android:padding="15dp"
                            android:layout_width="fill_parent">

                            <LinearLayout
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="0dp">


                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/intercom_black"
                                    android:text="Praveen Davis"
                                    android:gravity="center"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginRight="10dp"
                                    android:textSize="17sp"
                                    android:fontFamily="@font/roboto_medium"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp">


                                <Button
                                    android:layout_height="20dp"
                                    android:layout_width="wrap_content"
                                    android:background="@color/white"
                                    android:padding="0dp"
                                    android:layout_margin="0dp"
                                    android:textColor="@color/green"
                                    android:text="change"
                                    android:textSize="17sp"
                                    android:fontFamily="@font/roboto_medium"/>


                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout android:orientation="horizontal"
                            android:layout_height="fill_parent"
                            android:padding="15dp"
                            android:layout_width="fill_parent">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="0dp">


                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/location" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="4"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="0dp">


                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/intercom_black"
                                    android:text="text text text text text text text text text text text text text text text text"
                                    android:gravity="left"
                                    android:textSize="17sp"
                                    android:fontFamily="@font/roboto_regular"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp">


        1

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout android:orientation="horizontal"
                            android:layout_height="fill_parent"
                            android:padding="15dp"
                            android:layout_width="fill_parent">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="0dp">


                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/call" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="4"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="0dp">


                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/intercom_black"
                                    android:text="text text text text text text text text text text text text text text text text"
                                    android:gravity="left"
                                    android:textSize="17sp"
                                    android:fontFamily="@font/roboto_regular"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp">


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ship_layout"
                    android:orientation="vertical"
                    android:layout_below="@+id/bill_add_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="0dp">


                    <LinearLayout
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent">


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/intercom_black"
                            android:text="Shipping Address"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="10dp"
                            android:textSize="17sp"
                            android:fontFamily="@font/roboto_bold"/>


                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cart_shadow"
                        android:layout_marginBottom="10dp"
                        android:padding="0dp">

                        <LinearLayout android:orientation="horizontal"
                            android:layout_height="fill_parent"
                            android:padding="15dp"
                            android:layout_width="fill_parent">

                            <LinearLayout
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="0dp">


                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/intercom_black"
                                    android:text="Praveen Davis"
                                    android:gravity="center"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginRight="10dp"
                                    android:textSize="17sp"
                                    android:fontFamily="@font/roboto_medium"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp">


                                <Button
                                    android:layout_height="20dp"
                                    android:layout_width="wrap_content"
                                    android:background="@color/white"
                                    android:padding="0dp"
                                    android:layout_margin="0dp"
                                    android:textColor="@color/green"
                                    android:text="change"
                                    android:textSize="17sp"
                                    android:fontFamily="@font/roboto_medium"/>


                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout android:orientation="horizontal"
                            android:layout_height="fill_parent"
                            android:padding="15dp"
                            android:layout_width="fill_parent">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="0dp">


                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/location" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="4"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="0dp">


                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/intercom_black"
                                    android:text="text text text text text text text text text text text text text text text text"
                                    android:gravity="left"
                                    android:textSize="17sp"
                                    android:fontFamily="@font/roboto_regular"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp">


                                1

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout android:orientation="horizontal"
                            android:layout_height="fill_parent"
                            android:padding="15dp"
                            android:layout_width="fill_parent">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="0dp">


                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/call" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="4"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="0dp">


                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/intercom_black"
                                    android:text="text text text text text text text text text text text text text text text text"
                                    android:gravity="left"
                                    android:textSize="17sp"
                                    android:fontFamily="@font/roboto_regular"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp">


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>

           </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/btn_placeorder"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:textColor="@color/white"
                android:onClick="payment"
                android:text="Continue"
                android:fontFamily="@font/roboto_medium"
                />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>


