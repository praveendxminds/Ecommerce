<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ord_itCategorySimilarPrd"
    android:layout_width="180dp"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:background="@drawable/cart_shadow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shadow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleCategorySimilarPrd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Potato"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/light_black"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="3">

                <TextView
                    android:id="@+id/newPriceCategorySimilarPrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="50"
                    android:textColor="@color/light_black"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/oldPriceCategorySimilarPrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/strike_through"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Rs. 80"
                    android:textColor="@color/blackshadow"
                    android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageCategorySimilarPrd"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/deep" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/qtyCategorySimilarPrd"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="100Gms"
                        android:textColor="@color/light_black"
                        android:textSize="12dp"
                        />
                </LinearLayout>






            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <Button
                android:id="@+id/btnAddCategorySimilarPrd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:fontFamily="@font/roboto_medium"
                android:text="Add To Cart"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>