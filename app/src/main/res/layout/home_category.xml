<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rsb="http://schemas.android.com/tools"
    android:id="@+id/drawerHomeCateg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mainviewHomeCateg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarHomeCateg"
            layout="@layout/home_category_toolbar" />

        <LinearLayout
            android:id="@+id/sortfilterSection"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/toolbarHomeCateg"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_totalPrds"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="6"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center|left"
                android:text="100 Products found"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp">

                <ImageButton
                    android:id="@+id/btn_listViewHomeCateg"
                    android:layout_width="22dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/listview"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/btn_filterHomeCateg"
                    android:layout_width="22dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/filter"
                    android:duplicateParentState="true" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/navigation"
            android:layout_below="@+id/sortfilterSection"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <com.mindorks.placeholderview.PlaceHolderView
                    android:id="@+id/recycler_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                </com.mindorks.placeholderview.PlaceHolderView>

                <ProgressBar
                    android:id="@+id/loadingHomeCateg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true" />

            </FrameLayout>

        </LinearLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            app:itemTextColor="@color/light_black_2"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation_menu" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rlNavMenu"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/white"
        android:orientation="vertical">


        <android.support.design.widget.NavigationView
            android:id="@+id/nav_viewHomeCateg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_margin="0dp"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            android:theme="@style/NavigationView"
            app:itemBackground="@color/white"
            app:itemIconPadding="12dp"
            app:headerLayout="@layout/left_nav_header"
            app:menu="@menu/left_menu_drawer"
            app:theme="@style/LeftNavTheme">

            <LinearLayout
                android:id="@+id/llleftMenuLogOut"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#454A4A4A" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:background="@drawable/logout_yellow"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Logout"
                        android:textColor="@color/light_black_1"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.NavigationView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>


