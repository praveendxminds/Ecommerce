<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/productItemRecommended"
    android:layout_width="200dp"
    android:layout_marginBottom="30dp"
    android:layout_height="220dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="0dp"
    android:layout_marginLeft="0dp"
    app:cardCornerRadius="8dp"
    android:elevation="25dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="2dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="6">

                    <TextView
                        android:id="@+id/headingTxtRecommended"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Potato"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_black"
                        android:textSize="13dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="4">

                    <TextView
                        android:id="@+id/item_NewPriceRecommended"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="right"
                        android:text="50$"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_black"
                        android:textSize="13dp" />


                    <TextView
                        android:id="@+id/item_OldPriceRecommended"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="right"
                        android:background="@drawable/strike_through"
                        android:text="20$"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_black"
                        android:textSize="10dp" />


                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewRecommended"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/deep" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center">

                <Spinner
                    android:id="@+id/qntyRecommended"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="100Gms"
                    android:textColor="@color/light_black"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/addcartRecommended"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cart_shadow"
                android:fontFamily="@font/roboto_medium"
                android:text="Add To Cart"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

