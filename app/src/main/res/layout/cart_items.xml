<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cart_shadow"
    android:layout_marginBottom="10dp"
    android:padding="0dp">

    <LinearLayout android:orientation="horizontal"
        android:layout_height="fill_parent"
        android:padding="15dp"
        android:layout_width="fill_parent">

        <LinearLayout
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_width="0dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content">

                <TextView
                    android:id="@+id/prd_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/intercom_black"
                    android:text="GF IDLY RICE"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:textSize="17sp" />

                </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content">

                <TextView
                    android:id="@+id/re_amnt_lbl"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blackshadow"
                    android:text="Repack Amount"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/re_amnt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/intercom_black"
                    android:text="1KG"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content">

                    <TextView
                        android:id="@+id/price"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/blackshadow"
                        android:text="10"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="10dp"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/prd_price"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/intercom_black"
                        android:text="10"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="10dp"
                        android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:civ_border_color="#EEEEEE"
                    app:civ_border_width="0dp"
                    app:civ_shadow="false"
                    app:civ_shadow_radius="10"
                    app:civ_shadow_color="#8BC34A"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/decrease"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/whiteshadow"
                    android:textColor="@color/colorPrimary"
                    android:text="-" />

                <TextView
                    android:id="@+id/integer_number"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:text="0"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/increase"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/whiteshadow"
                    android:textColor="@color/colorPrimary"
                    android:onClick="increaseInteger"
                    android:text="+" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/image"
            android:layout_alignLeft="@+id/image"
            android:layout_alignRight="@+id/image"
            android:layout_alignTop="@+id/main_image"
            android:background="#DDDDDD" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:text="Remove"
            />

    </LinearLayout>


</LinearLayout>
