<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarGrid"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:theme="@style/ToolbarColoredBackArrow"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footerGrid"
        android:layout_below="@+id/toolbarGrid">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            />


            <LinearLayout
                android:id="@+id/prd_layoutGrid"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shadow"
                android:gravity="center">


                <android.support.v7.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    card_view:cardElevation="5dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/prd_imgGrid"
                            android:layout_width="match_parent"
                            android:layout_height="280dp"
                            android:adjustViewBounds="true"
                            android:padding="8dp"
                            android:scaleType="centerCrop" />

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="top|right"
                            android:src="@drawable/settings"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"/>
                    </FrameLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/price_layoutGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prd_layoutGrid"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shadow"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">


                    <TextView
                        android:id="@+id/titleGrid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="left"
                        android:paddingBottom="5dp"
                        android:text="title"
                        android:textColor="@color/blackshadow"
                        android:textSize="24sp" />


                    <RelativeLayout
                        android:id="@+id/price_viewGrid"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/original_priceGrid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="₹ 100"
                            android:textColor="@color/blackshadow"
                            android:textSize="13sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/original_priceGrid"
                            android:background="@drawable/strike_through"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="₹ 500"
                            android:textColor="@color/blackshadow"
                            android:textSize="13sp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/share_layotGrid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/price_viewGrid"
                        android:background="@drawable/bodertop">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Share"
                            android:textColor="@color/black" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/detil_layourGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qnt_layoutGrid"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shadow"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">


                <TextView
                    android:id="@+id/qntyGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:text="Quantity"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey"
                    android:textSize="15dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/decreaseGrid"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/whiteshadow"
                        android:fontFamily="@font/roboto_bold"
                        android:text="-"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/integer_numberGrid"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/increaseGrid"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/whiteshadow"
                        android:fontFamily="@font/roboto_bold"
                        android:onClick="increaseInteger"
                        android:text="+"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/qnt_layoutGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_layoutGrid"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shadow"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <RelativeLayout
                    android:id="@+id/toggleViewGrid"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/headingTxtGrid"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="Chose an option"
                        android:textColor="@color/blackshadow"
                        android:textSize="13sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_toLeftOf="@id/toggleIconGrid"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="1Kg"
                        android:textColor="@color/blackshadow"
                        android:textSize="13sp" />


                    <ImageView
                        android:id="@+id/toggleIconGrid"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center|right"
                        android:padding="0dp"
                        android:src="@drawable/right"
                        android:tint="@color/blackshadow" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativeGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detil_layourGrid"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <com.mindorks.placeholderview.PlaceHolderView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/galleryViewGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />
            </LinearLayout>


        </RelativeLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/footerGrid"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addtoCartGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:onClick="addcart"
                android:text="Add To Cart"
                android:textColor="@color/green" />

            <Button
                android:id="@+id/buynowGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/green"
                android:fontFamily="@font/roboto_medium"
                android:onClick="buynow"
                android:text="Buy Now"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>


