<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarPrdDetail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:theme="@style/ToolbarColoredBackArrow"
        app:title="Potato"
        app:titleTextColor="@color/white">


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footerPrdDetail"
        android:layout_below="@+id/toolbarPrdDetail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="3dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/prd_layoutPrdDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    card_view:cardElevation="7dp"
                    android:layout_marginTop="30dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <com.mindorks.placeholderview.PlaceHolderView
                            android:id="@+id/img_list_PrdDetails"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="horizontal" />

                    </FrameLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/indicator_PrdDetails"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_alignParentBottom="true" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/price_layoutGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prd_layoutPrdDetail"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="8dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/titlePrdDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="left"
                        android:paddingBottom="5dp"
                        android:text="Potato"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <LinearLayout
                        android:id="@+id/reviewLayoutPrdDetail"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="4"
                            android:background="@color/greenLightShade"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/reviewPrdDetail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center|right"
                                android:text="4.2"
                                android:textColor="@color/darkerGreen"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/star" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/ratingsPrdDetail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/reviewPrdDetail"
                            android:layout_weight="3"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="left|center"
                            android:text="10,000 ratings"
                            android:textColor="@color/blackshadow"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_vertical|right"
                                android:text="Qty:"
                                android:textColor="@color/blackshadow"
                                android:textSize="15sp" />

                            <Spinner
                                android:id="@+id/qntyPrdDetail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/product_detail_spinner"
                                android:padding="0dp"
                                android:spinnerMode="dropdown" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/priceViewPrdDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/originalPricePrdDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center|left"
                                android:text="â‚¹ 50"
                                android:textColor="@color/black"
                                android:textFontWeight="15dp"
                                android:textSize="15dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="left|bottom">

                                <TextView
                                    android:id="@+id/oldPricePrdDetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/strike_through_1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="â‚¹ 80"
                                    android:textColor="@color/black"
                                    android:textSize="10dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/discountPrdDetail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center|left"
                                android:text="Get 10% OFF"
                                android:textColor="@color/light_black"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_weight="6"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/idMinusICon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|bottom"
                                android:layout_margin="1dp"
                                android:layout_weight="1"
                                android:background="@drawable/blackdecre" />

                            <TextView
                                android:id="@+id/idProductCount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".6"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center|bottom"
                                android:text="2"
                                android:textSize="15sp"
                                tools:textColor="@android:color/black" />

                            <ImageButton
                                android:id="@+id/idPlusIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right|bottom"
                                android:layout_margin="1dp"
                                android:layout_weight="1"
                                android:background="@drawable/blackincr" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativePrdDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_layoutGrid"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:id="@+id/ll_similar_prd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center|left"
                        android:text="Similar Products"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <com.mindorks.placeholderview.PlaceHolderView
                    android:id="@+id/similarPrdDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativePrdDetail"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabLayoutProductDetail"
                    style="@style/tab_layout_product_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:elevation="0dp"
                    android:minHeight="?attr/actionBarSize"
                    app:elevation="0dp"
                    app:tabBackground="@drawable/tab_background_color"
                    app:tabIndicatorHeight="0dp"
                    app:tabSelectedTextColor="@color/txtcolor"
                    app:tabTextColor="@color/txtcolor" >
                </android.support.design.widget.TabLayout>
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPagerProductDetail"
                    style="@style/viewpager_layout_product_details"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/footerPrdDetail"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addtoWishListPrdDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/green"
                android:fontFamily="@font/roboto_medium"
                android:onClick="buynow"
                android:text="Add To WishList"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:id="@+id/addtoCartPrdDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:onClick="addcart"
                android:text="Add To Cart"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="15dp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>


