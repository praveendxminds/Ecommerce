<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarPrdDetail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:theme="@style/ToolbarColoredBackArrow"
        app:titleTextAppearance="@style/toolbar_text"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerPrdDetail"
        android:layout_below="@+id/toolbarPrdDetail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/prd_layoutPrdDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30dp">

                <com.mindorks.placeholderview.PlaceHolderView
                    android:id="@+id/img_list_PrdDetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_layoutGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prd_layoutPrdDetail"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/titlePrdDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Potato"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/reviewLayoutPrdDetail"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="2dp"
                            android:layout_weight="4"
                           android:background="@color/white"
                            android:orientation="horizontal">
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Large"
                                android:textSize="12sp"
                                android:textColor="@color/light_black_2"
                                android:fontFamily="@font/roboto_regular"/>
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Medium"
                                android:textSize="12sp"
                                android:textColor="@color/light_black_2"
                                android:fontFamily="@font/roboto_regular"/>
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Small"
                                android:textSize="12sp"
                                android:textColor="@color/light_black_2"
                                android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_vertical|right"
                                android:text="Qty:"
                                android:textColor="@color/blackshadow"
                                android:textSize="15sp"
                                android:padding="5dp"/>

                            <Spinner
                                android:id="@+id/qntyPrdDetail"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/product_detail_spinner"
                                android:padding="0dp"
                                android:spinnerMode="dropdown" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/priceViewPrdDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/originalPricePrdDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center|left"
                                android:text="₹ 50"
                                android:textColor="@color/black"
                                android:textFontWeight="15dp"
                                android:textSize="15dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="left|bottom">

                                <TextView
                                    android:id="@+id/tvDisPricePrdDetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/strike_through_1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="₹ 80"
                                    android:textColor="@color/black"
                                    android:textSize="10dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                            <LinearLayout
                                android:id="@+id/llAddToCart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible">
                                <ImageButton
                                    android:id="@+id/btnAddItem"
                                    android:layout_width="48dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/addbutton"
                                    android:duplicateParentState="true"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llCountItems"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone">

                            <ImageButton
                                android:id="@+id/imgBtn_decre"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="left|bottom"
                                android:background="@drawable/blackdecre" />

                            <TextView
                                android:id="@+id/tv_productCount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_horizontal|bottom"
                                android:text="2"
                                android:textSize="13sp"
                                tools:textColor="@android:color/black" />

                            <ImageButton
                                android:id="@+id/imgBtn_incre"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="right|bottom"
                                android:background="@drawable/blackincr" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativePrdDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_layoutGrid"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:id="@+id/ll_similar_prd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center|left"
                        android:text="Similar Products"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <com.mindorks.placeholderview.PlaceHolderView
                    android:id="@+id/similarPrdDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relativePrdDetail"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <WebView
                    android:id="@+id/webViewDesc"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footerPrdDetail"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addtoWishListPrdDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:fontFamily="@font/roboto_medium"
                android:onClick="buynow"
                android:text="Add WishList"
                android:textAllCaps="false"
                android:textColor="@color/tabbackground"
                android:textSize="15dp" />

            <Button
                android:id="@+id/addtoCartPrdDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:fontFamily="@font/roboto_medium"
                android:onClick="addcart"
                android:text="Add To Cart"
                android:textAllCaps="false"
                android:textColor="@color/tabbackground"
                android:textSize="15dp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>


