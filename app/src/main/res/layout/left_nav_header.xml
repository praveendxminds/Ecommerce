<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:orientation="horizontal"
        android:duplicateParentState="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".55"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <FrameLayout
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:background="@drawable/rounded_login_button"
                    android:backgroundTint="@color/grey">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/ivProfilePic"
                        app:civ_border_width="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/camera" />

                    <Button
                        android:id="@+id/btnEditProfilePic"
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:layout_gravity="right|bottom"
                        android:background="@drawable/edit_btn_border"
                        android:backgroundTint="#FFFA990E"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="5sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProfileDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight=".3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="left|center"
                android:text="Amaresh Chandra"
                android:textColor="@color/light_black_2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="amaresh.chandra@gmail.com"
                android:textColor="@color/light_black_2"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="+918335960237"
                android:textColor="@color/light_black_2"
                android:textSize="10sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight=".6"
            android:gravity="center|bottom"
            android:paddingBottom="32dp">

            <ImageView
                android:id="@+id/ivEditProfile"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/edit_profile" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#454A4A4A" />
</LinearLayout>