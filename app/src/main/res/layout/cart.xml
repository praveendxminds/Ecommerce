<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/white"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolbarColoredBackArrow"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="My Cart"
        app:titleTextAppearance="@style/toolbar_text"/>

    <RelativeLayout android:background="#e1e1e1"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:id="@+id/layout_total"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:weightSum="2">
            <TextView android:gravity="start"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="Veggies"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium">
            </TextView>

            <TextView
                android:gravity="end"
                android:id="@+id/tv_total"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="6 items"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium">
            </TextView>
        </LinearLayout>


        <com.mindorks.placeholderview.PlaceHolderView
            android:id="@+id/recycler_cart"
            android:layout_above="@+id/btn_placeorder"
            android:layout_below="@+id/layout_total"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        </com.mindorks.placeholderview.PlaceHolderView>





        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/btn_placeorder"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@color/green"
            android:padding="5dp">

            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Total Rs. 300"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/linkDeliveryTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/delivery_time"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="13dp"
                android:fontFamily="@font/roboto_medium"
                />

            <Button
                android:id="@+id/buttonChkOut"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/checkout_border"
                android:textColor="@color/black"
                android:onClick="billing"
                android:text="Checkout"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_medium"
                android:textSize="15dp"
                android:layout_weight="1"/>

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>


