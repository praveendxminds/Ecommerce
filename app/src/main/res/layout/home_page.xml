<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drwLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarHomePage"
            layout="@layout/toolbar_home_new" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/navigationHomePage"
            android:layout_below="@+id/toolbarHomePage"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <com.mindorks.placeholderview.PlaceHolderView
                    android:id="@+id/list_items_homePage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:scrollbars="vertical" />

                <ProgressBar
                    android:id="@+id/loadingHomePage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true" />

            </FrameLayout>
        </LinearLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigationHomePage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/whiteshadow"
            app:itemTextColor="@color/light_black_2"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation_menu" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rlNavMenu"
        android:layout_width="281dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="left"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".55"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <FrameLayout
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:background="@drawable/rounded_login_button"
                        android:backgroundTint="@color/grey">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/ivProfilePic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/camera"
                            app:civ_border_width="0dp"/>

                        <Button
                            android:id="@+id/btnEditProfilePic"
                            android:layout_width="20dp"
                            android:layout_height="10dp"
                            android:layout_gravity="right|bottom"
                            android:background="@drawable/edit_btn_border"
                            android:backgroundTint="#FFFA990E"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:text="Edit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="5sp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llProfileDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="left|center"
                    android:text="Amaresh Chandra"
                    android:textColor="@color/light_black_2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:text="amaresh.chandra@gmail.com"
                    android:textColor="@color/light_black_2"
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="+918335960237"
                    android:textColor="@color/light_black_2"
                    android:textSize="10sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight=".6"
                android:gravity="center|bottom"
                android:paddingBottom="32dp">

                <ImageView
                    android:id="@+id/ivEditProfile"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/edit_profile" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#454A4A4A" />
        <!--  <ListView
              android:id="@+id/lvMenuList"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:divider="@null"
              android:dividerHeight="0dp"/>-->

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_viewHomePage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:itemBackground="@color/white"
            android:background="@color/white"
            app:menu="@menu/left_menu_drawer"
            app:theme="@style/LeftNavTheme"
            android:theme="@style/NavigationView"
            app:itemIconPadding="12dp"
            android:layout_margin="0dp"
            >

            <LinearLayout
                android:id="@+id/llleftMenuLogOut"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#454A4A4A" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="16dp"
                    >
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="22dp"
                    android:background="@drawable/logout_yellow"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="@color/light_black_1"
                    android:text="Logout"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    />
                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.NavigationView>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>

