<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/productItemDealofDay"
    android:layout_width="200dp"
    android:layout_height="220dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="30dp"
    android:elevation="25dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headingTxtDealofDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Potato"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_black"
                        android:textSize="13dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_priceDealofDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/roboto_bold"
                        android:text="50$"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_black"
                        android:textSize="13dp" />


                    <TextView
                        android:id="@+id/item_old_priceDealofDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/strike_through"
                        android:fontFamily="@font/roboto_bold"
                        android:text="20$"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_black"
                        android:textSize="10dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/imageViewDealofDay"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/deep" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center">

                <Spinner
                    android:id="@+id/qtydealSpinner"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="100Gms"
                    android:textColor="@color/light_black"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/llCountPrd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cart_shadow"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="2dp">

                    <ImageButton
                        android:id="@+id/decreaseDealofDay"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/minus"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tv_countDealofDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="0"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/increaseDealofDay"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_gravity="center"
                        android:background="@drawable/plus" />
                </LinearLayout>


                <Button
                    android:id="@+id/addcartDealofDay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cart_shadow"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Add To Cart"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="visible" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

