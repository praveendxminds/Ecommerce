<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/productItemDealofDay"
    android:layout_width="150dp"
    android:layout_marginBottom="10dp"
    android:layout_height="150dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="0dp"
    android:layout_marginLeft="0dp"
    app:cardCornerRadius="5dp"
    android:elevation="25dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llDealOfDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="4">

                    <TextView
                        android:id="@+id/headingTxtDealofDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Potato"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_black"
                        android:textSize="12sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/item_NewpriceDealofDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_gravity="right"
                        android:text="₹ 50"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/green_1"
                        android:textSize="10sp" />


                    <TextView
                        android:id="@+id/item_OldpriceDealofDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_gravity="right"
                        android:background="@drawable/strike_through"
                        android:text="₹ 20"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_black_1"
                        android:textSize="8sp" />


                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imageViewDealofDay"
                    android:layout_width="52dp"
                    android:layout_height="50dp"
                    android:src="@drawable/deep" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Spinner
                    android:id="@+id/qtydealSpinner"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="100Gms"
                    android:textColor="@color/light_black_2"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">
                <LinearLayout
                    android:id="@+id/llCountPrd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cart_shadow"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="2dp">

                    <LinearLayout
                        android:id="@+id/fl_decreaseDealofDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/plus_minus_ontouch_event"
                        android:gravity="center">
                    <ImageButton
                        android:id="@+id/decreaseDealofDay"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/minus"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_countDealofDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:gravity="center"/>


                    <LinearLayout
                        android:id="@+id/fl_increaseDealofDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/plus_minus_ontouch_event"
                        android:gravity="center">
                    <ImageButton
                        android:id="@+id/increaseDealofDay"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/plus" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/addcartDealofDay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cart_shadow"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Add To Cart"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

