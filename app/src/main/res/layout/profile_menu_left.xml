<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".55"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_login_button"
                android:backgroundTint="@color/grey">

                <ImageView
                    android:id="@+id/ivProfilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person" />

                <Button
                    android:id="@+id/btnEditProfilePic"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/edit_btn_border"
                    android:backgroundTint="#FFFA990E"
                    android:gravity="center"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="5sp"
                    android:fontFamily="@font/roboto_bold"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llProfileDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="Amaresh Chandra"
            android:textColor="@color/light_black_3"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:singleLine="true"
            android:text="amaresh.chandra@gmail.com"
            android:textColor="@color/light_black_1"
            android:textSize="10sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="+918335960237"
            android:textColor="@color/light_black_1"
            android:textSize="10sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".7"
        android:gravity="center"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/ivEditProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/edit_profile" />
    </LinearLayout>

</LinearLayout>


