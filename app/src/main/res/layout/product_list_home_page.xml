<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/productItemHomeTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.6">

                <ImageView
                    android:id="@+id/itemIconHomeTwo"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@android:color/holo_orange_dark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/prd_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="left"
                    android:text="FRESHO"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/headingTxtHomeTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Chilli-Green"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/light_black"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/qnty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/headingTxt"
                        android:text="100gms"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/priceOldHomeTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MRP Rs. 58.75"
                    android:background="@drawable/strike_through"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15dp"
                    android:textColor="@color/blackshadow"/>
                <TextView
                    android:id="@+id/priceNewHomeTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 47.00"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18dp"
                    android:textColor="@color/light_black"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0.8">

                <Button
                    android:id="@+id/addcartHomeTwo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_border_add"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

