<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/drawerLayoutShopBy">

    <RelativeLayout
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarShopBy"
            layout="@layout/toolbar_home_new" />

        <TextView
            android:id="@+id/tvShopByCateg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:paddingLeft="19.5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Shop By Category"
            android:textColor="#DE4A4A4A"
            android:textSize="14sp"
            android:layout_below="@+id/toolbarShopBy"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/tvShopByCateg">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <com.mindorks.placeholderview.ExpandablePlaceHolderView
                    android:id="@+id/phviewCategList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@color/white"/>
                <ProgressBar
                    android:id="@+id/pBarloading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true" />

            </FrameLayout>
        </LinearLayout>
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigationShopBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/whiteshadow"
            app:itemTextColor="@color/light_black_2"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation_menu" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rlNavMenu"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".55"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/rounded_login_button"
                        android:backgroundTint="@color/grey">

                        <ImageView
                            android:id="@+id/ivProfilePic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_person" />

                        <Button
                            android:id="@+id/btnEditProfilePic"
                            android:layout_width="20dp"
                            android:layout_height="10dp"
                            android:layout_gravity="right|bottom"
                            android:background="@drawable/edit_btn_border"
                            android:backgroundTint="#FFFA990E"
                            android:gravity="center"
                            android:text="Edit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="5sp"
                            android:fontFamily="@font/roboto_bold"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llProfileDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="Amaresh Chandra"
                    android:textColor="@color/light_black_3"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:text="amaresh.chandra@gmail.com"
                    android:textColor="@color/light_black_1"
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="+918335960237"
                    android:textColor="@color/light_black_1"
                    android:textSize="10sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:gravity="center"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/ivEditProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/edit_profile" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#78000000" />

        <ListView
            android:id="@+id/lvMenuList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"/>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>